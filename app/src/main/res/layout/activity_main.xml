<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/currency1Spinner"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/currency1Amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/currency1Spinner"/>

    <Spinner
        android:id="@+id/currency2Spinner"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/currency1Amt"/>

    <EditText
        android:id="@+id/currency2Amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="16dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/currency2Spinner"/>
</android.support.constraint.ConstraintLayout>